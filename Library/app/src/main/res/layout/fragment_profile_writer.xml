<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlavniScreenovi.FragmentProfileWriter">

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/imageViewProfileWriter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/textView52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile" />

    <EditText
        android:id="@+id/firstNameProfileWriter"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewLastNameMissingWriter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/lastNameProfileWriter"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewEmailMissingWriter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/usernameProfileWriter"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textFirstNameMissingWriter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Set your profile picture"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textUsernameMissingWriter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonUpdateProfileWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#FFFF"
        android:text="Update"
        android:textColor="#FF9E0F"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textUsernameMissingWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your username"
        android:textColor="#CCFF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/usernameProfileWriter"
        app:layout_constraintEnd_toEndOf="@+id/usernameProfileWriter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usernameProfileWriter" />

    <TextView
        android:id="@+id/textFirstNameMissingWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your first name"
        android:textColor="#CCFF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/firstNameProfileWriter"
        app:layout_constraintEnd_toEndOf="@+id/firstNameProfileWriter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/firstNameProfileWriter" />

    <TextView
        android:id="@+id/textViewLastNameMissingWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your last name"
        android:textColor="#CCFF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/lastNameProfileWriter"
        app:layout_constraintEnd_toEndOf="@+id/lastNameProfileWriter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lastNameProfileWriter" />

    <TextView
        android:id="@+id/textViewEmailMissingWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your date of birth"
        android:textColor="#CCFF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textDateProfileWriter"
        app:layout_constraintEnd_toEndOf="@+id/textDateProfileWriter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textDateProfileWriter" />

    <EditText
        android:id="@+id/textDateProfileWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Date of birth"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/buttonUpdateProfileWriter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/randomtxtWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>