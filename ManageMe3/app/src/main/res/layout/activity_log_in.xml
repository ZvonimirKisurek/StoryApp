<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clLogIn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:alpha="@dimen/material_emphasis_disabled_background"
        android:src="@drawable/hotelicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="#DF95C66B"
        android:backgroundTint="#E663CDFD"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:letterSpacing="0.25"
        android:padding="3dp"
        android:text="Dobrodošli!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textForgotMailLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaš mail je neispravan ili se ne koristi"
        android:textColor="#E91E36"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailLogInLA"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailLogInLA"
        app:layout_constraintTop_toBottomOf="@+id/textView57"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/editTextEmailLogInLA"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circleblue"
        android:backgroundTint="#E663CDFD"
        android:ems="10"
        android:hint="Unesite vaš email"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForgotMailLA" />

    <TextView
        android:id="@+id/textWrongPasswordLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Vaša šifra nije ispravna"
        android:textColor="#E91E36"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordLogInLA"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordLogInLA"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailLogInLA" />

    <EditText
        android:id="@+id/editTextPasswordLogInLA"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circleblue"
        android:backgroundTint="#E663CDFD"
        android:ems="10"
        android:hint="Unesite vašu šifru"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWrongPasswordLA" />

    <Button
        android:id="@+id/buttonPrijavaLogInLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/circleblueroomactivity"
        android:backgroundTint="#E663CDFD"
        android:padding="9dp"
        android:text="  Prijavi se  "
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordLogInLA" />

    <Button
        android:id="@+id/buttonRegisterLogInLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circleblueroomactivity"
        android:backgroundTint="#E663CDFD"
        android:padding="9dp"
        android:text="  Registriraj se  "
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPrijavaLogInLA" />

    <TextView
        android:id="@+id/textForgotPasswordLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text=" Zaboravili ste šifru? Promijenite ju! "
        android:textColor="#E663CDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegisterLogInLA" />

    <ProgressBar
        android:id="@+id/progressBarLogInLA"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:progressTint="#E663CDFD"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView42"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>